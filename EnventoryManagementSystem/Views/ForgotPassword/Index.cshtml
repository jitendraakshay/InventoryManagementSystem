@model DomainEntities.EmailAddress

@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">

                <div class="panel-heading text-center">
                    <h2>Reset Password</h2>

                </div>
                <div class="panel-body">
                    @*@if (!String.IsNullOrEmpty(ViewBag.EmailSentStatus))
                        {*@
                    @if (ViewBag.EmailSentStatus)
                    {
                        <div class="panel-body">
                            <div class="alert alert-success alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                @ViewBag.Message
                            </div>
                        </div>

                    }
                    else
                    {
                        if (!String.IsNullOrEmpty(ViewBag.Message))
                        { <div class="panel-body">
                                <div class="alert alert-danger alert-dismissable">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                    @ViewBag.Message
                                </div>
                            </div>
                        }
                    }
                    @*}*@




                    @using (Html.BeginForm("Index", "ForgotPassword", FormMethod.Post))
                    {
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Please Enter Your Email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <input type="submit" class="btn btn-lg btn-primary btn-block login-now" value="Reset Password" />
                        <p>
                            @Html.ActionLink("Back to Login", "Index", "Login")
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

